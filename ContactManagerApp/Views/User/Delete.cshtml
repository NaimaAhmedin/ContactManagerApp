@model ContactManagerApp.Models.Contact

@{
    ViewData["Title"] = "Delete Contact";
}
<body style="background-color: black; color: white;">

    <h1 style="color: #04FFFB;">Delete contact</h1>

    <h3 style="color: #04FFFB;">Are you sure you want to delete this?</h3>
    <div>
        <h4 style="color: #04FFFB;">ContactList</h4>
        <hr style="border-color: #04FFFB;" />
        <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>
    </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" style="background-color: #04FFFB; color: black;" /> |
            <a asp-action="Index" class="btn btn-danger mx-3" style="background-color: #04FFFB; color: black;">Back to List</a>
        </form>
    </div>
</body>
