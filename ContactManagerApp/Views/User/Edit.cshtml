@model ContactManagerApp.Models.Contact

@{
    ViewData["Title"] = "Edit Contact";
}
<body style="background-color: black; color: white;">
    <h1 style="color: #04FFFB;">Edit Contact</h1>

<form asp-action="Edit">
    <div class="form-group">
            <label asp-for="FirstName" class="control-label" style="color: #04FFFB;"></label>
            <input asp-for="FirstName" class="form-control" style="background-color: black; color: white;" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
            <label asp-for="LastName" class="control-label" style="color: #04FFFB;"></label>
            <input asp-for="LastName" class="form-control" style="background-color: black; color: white;" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
            <label asp-for="Email" class="control-label" style="color: #04FFFB;"></label>
            <input asp-for="Email" class="form-control" style="background-color: black; color: white;" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label" style="color: #04FFFB;"></label>
            <input asp-for="PhoneNumber" class="form-control" style="background-color: black; color: white;" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" />
        <input type="submit" value="Save" class="btn btn-info my-3" />
        <a asp-action="Index" class="btn btn-info my-3">Back to List</a>
</form>
</body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
