@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}
<body style="background-color: black; color: white;">
    <h1 style="color: #04FFFB;">@ViewData["Title"]</h1>
    <h2 id="external-login-title" style="color: #04FFFB;">Associate your @Model.ProviderDisplayName account.</h2>
<hr />

<p id="external-login-description" class="text-info">
        You've successfully authenticated with <span style="color: #04FFFB;">@Model.ProviderDisplayName</span>.
    Please enter an email address for this site below and click the Register button to finish
    logging in.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group">
                    <label asp-for="Input.FirstName" style="color: #04FFFB;"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Input.LastName" style="color: #04FFFB;"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
                <div class="form-group">
                <label asp-for="Input.Email" class="form-label" style="color: #04FFFB;"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="Please enter your email."/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-info">Register</button>
        </form>
    </div>
</div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
